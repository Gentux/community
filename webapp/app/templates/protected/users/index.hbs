<div class="section">
  <h1>Users</h1>

  <table class="table">
    <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
    </tr>
    </thead>
    <tbody>
    {{#each model as |user|}}
      {{#unless user.isNew}}
        <tr>
         <th scope="row">{{#link-to "protected.users.user" user}}{{user.id}}{{/link-to}}</th>
         <td>{{user.firstName}}</td>
         <td>{{user.lastName}}</td>
         <td>{{user.email}}</td>
        </tr>
      {{/unless}}
    {{/each}}
    </tbody>
  </table>


  {{#link-to 'protected.users.new' class='btn btn-primary pull-xs-right'}}Add user{{/link-to}}
  <div class="clearfix"></div>

</div>

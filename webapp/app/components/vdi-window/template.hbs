<div class='vdi-window noselect section {{ windowClass }} {{ if stateVisible "state-show" "state-hide" }}'>
  <div class='head'>
    <h4>
      {{#if materialIcon}}
        <i class="material-icons">{{ materialIcon }}</i>
      {{/if}}
      {{ title }}
      {{stateVisible}}
    </h4>
    <div class='close-btn'>
       {{ icon-component
          materialIcon="close"
          clickable=true
          hover-enabled=true
          click=toggleWindow
          content="Close"
          position="right"
        }}
    </div>
  </div> 
  {{ yield }}
</div>

{
    "variables": {
        "product_name": "windows-server",
        "product_version": "2012R2",
        "product_arch": "amd64",
        "headless": "true",
        "password": "Nanocloud123+",
        "disk_size": "30000"
    },

    "builders": [
        {
            "vm_name": "{{user `product_name`}}-{{user `product_version`}}-{{user `product_arch`}}.qcow2",
            "name": "windows-2012R2",
            "headless": "{{user `headless`}}",
            "type": "qemu",
            "format":"qcow2",
            "accelerator": "kvm",
            "disk_size": "{{ user `disk_size`}}",
            "disk_interface":"virtio",
            "qemuargs": [
                           [ "-m", "2560"],
                           [ "-smp", "4"]
                        ],
            "iso_url": "http://care.dlservice.microsoft.com/dl/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.17050.WINBLUE_REFRESH.140317-1640_X64FRE_SERVER_EVAL_EN-US-IR3_SSS_X64FREE_EN-US_DV9.ISO",
            "iso_checksum_type": "md5",
            "iso_checksum": "5b5e08c490ad16b59b1d9fab0def883a",

            "ssh_username": "Administrator",
            "ssh_password": "Nanocloud123+",
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2222,
            "vnc_port_min": 5987,
            "vnc_port_max": 5987,

            "ssh_wait_timeout": "120m",

            "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "boot_wait": "2s",

            "floppy_files": [
                "floppy/drivers/virtio-win-0.1-81/WIN7/AMD64/*",
                "floppy/common/*",
                "floppy/windows-2012-standard-amd64/*"
            ]
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": ["net user Administrator {{ user `password`}}"]
        },
        {
            "type": "shell",
            "remote_path": "/cygdrive/c/Windows/Temp/script.bat",
            "execute_command": "cmd /c C:/Windows/Temp/script.bat",
            "scripts": [
                "scripts/enable-rdp.bat",
                "scripts/execution-policy-unrestricted.bat",
                "scripts/unlimited-password-expiration.bat",
                "scripts/install-AD.bat"
            ]
        }
    ]
}
